@model Data.Models.Order

@{
    ViewBag.Title = "Delete Order";
}

<h2>Delete Order</h2>

<div>
    <h4>Are you sure you want to delete this order?</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.SourceLanguage)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.SourceLanguage)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.FinalLanguage)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.FinalLanguage)
        </dd>


    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <input type="submit" value="Delete" class="btn btn-danger" />
        @Html.ActionLink("Cancel", "Index", null, new { @class = "btn btn-default" })
    }
</div>
