@model Data.Models.Certificate

<h2>Delete Certificate</h2>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Certificate</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.CertificateName)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.CertificateName)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.IssuingOrganization)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.IssuingOrganization)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.IssueDate)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.IssueDate)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.ExpiryDate)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.ExpiryDate)
        </dd>
    </dl>

    @using (Html.BeginForm("Delete", "Certificates", new { id = Model.CertificateId }, FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        <input type="submit" value="Delete" class="btn btn-default" />
    }
    @Html.ActionLink("Cancel", "Index")
</div>
