@model Data.Models.Payment

<h2>Удаление типа платежа</h2>

<div>
    <h4>Вы уверены, что хотите удалить этот тип платежа?</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.PaymentName)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.PaymentName)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.PaymentStatus)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.PaymentStatus)
        </dd>
    </dl>

    @using (Html.BeginForm("Delete", "Payments", new { id = Model.PaymentTypeId }, FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        <input type="submit" value="Удалить" class="btn btn-default" />
    }

    @Html.ActionLink("Отмена", "Index")
</div>
